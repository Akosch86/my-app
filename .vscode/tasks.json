  "version": "2.0.0",
  "tasks": [
      {
          "taskName": "serve app",
          "type": "shell",
          "command": "npm start",
          "group": "test",
          "problemMatcher":"$tsc",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      },
      {
          "taskName": "dev build",
          "type": "shell",
          "command": "ng build",
          "group": "build",
          "problemMatcher":"$tsc",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      },
      {
          "taskName": "prod build",
          "type": "shell",
          "command": "ng build --prod",
          "group": "build",
          "problemMatcher":"$tsc",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
      }
  ]
}
